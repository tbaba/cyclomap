!!!5
%html{ lang: 'ja' }
  %head
    %title Cyclomap
    %meta{ charset: 'utf-8' }
    = stylesheet_link_tag 'font-awesome', media: 'all'
    = stylesheet_link_tag 'application', media: 'all'
    = javascript_include_tag 'application'
    = csrf_meta_tags

  %body
    %nav.navbar.navbar-default{ role: 'navigation' }
      .container
        .navbar-header
          = link_to 'Cyclomap', root_path, class: 'navbar-brand'
        %ul.nav.navbar-nav.navbar-right
          - if user_signed_in?
            %li.user-info
              %span.face= image_tag current_user.profile_image, class: 'img-circle'
              %span.name= current_user.screen_name
            %li= link_to 'Logout', destroy_user_session_path, method: :delete
          - else
            %li= link_to 'Login with Twitter', user_omniauth_authorize_path(:twitter)

    .container
      - if notice
        %p.alert.alert-success= notice
      - if alert
        %p.alert.alert-danger= alert

      = yield
