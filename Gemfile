source 'https://rubygems.org'

ruby '2.1.1'

# Framework
gem 'rails', '4.1.0'
gem 'rails_12factor'
gem 'rails-i18n', '~> 4.0.0'

# Database
gem 'pg'

# Authentication
gem 'devise'
gem 'omniauth'
gem 'omniauth-twitter'

# Storage
gem 'carrierwave'
gem 'fog'

# Design and Frontend
gem 'sass-rails',   '~> 4.0.1'
gem 'coffee-rails', '~> 4.0.0'
gem 'uglifier', '>= 1.3.0'
gem 'jquery-rails'
gem 'compass-rails'
gem 'font-awesome-rails'
gem 'haml-rails'
gem 'bootstrap-sass'

# Implementation
gem 'acts-as-taggable-on'

# API
gem 'jbuilder', '~> 2.0'
gem 'addressable'

# Documents
gem 'sdoc', '~> 0.4.0',          group: :doc

# Development
group :development, :test do
  gem 'spring'
  gem 'dotenv-rails'

  gem 'rspec'
  gem 'rspec-rails'
  gem 'capybara'
  gem 'factory_girl'
  gem 'factory_girl_rails'
  gem 'faker'

  gem 'pry-rails'
  gem 'pry-byebug'
end

group :production do
  gem 'newrelic_rpm'
end
